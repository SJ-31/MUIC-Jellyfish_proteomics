docker.runOptions = '-u $(id -u):$(id -g)'
includeConfig 'config/controller.config'
conda.enabled = true
executor {
    name = "local"
    queueSize = 1
}


resources = "$projectDir/resources"


// RNA seq params
params.cleaned = "$resources/RNA-seq/2-filtering"
params.logs = "$projectDir/logs"
params.normalized_seqs = "$resources/RNA-seq/3-normalize"
params.reports = "$projectDir/reports/RNA-seq"
params.stats = "$projectDir/reports/RNA-seq/2-filtering"
params.normalized = "$projectDir/reports/RNA-seq/3-normalize"
params.rawfastq = "$resources/raw/RNA/*.fastq"
params.stats = "$projectDir/reports/RNA-seq/2-filtering"
params.reports = "$projectDir/reports/RNA-seq" // If you don't specify $projectDir, then the directory will get created in nextflow's 'work' directory for that process for an output process
params.rnadata = "$resources/RNA-seq"
params.assembled = "$resources/RNA-seq/4-assembly"
params.translated = "$resources/RNA-seq/6-translated"
params.alignlog = "$projectDir/reports/RNA-seq/rnaquast-read_alignment"
params.k = "31"

// Mass spec params
params.mq_peptides = "$resources/raw/CiCs*/combined/txt/allPeptides.txt"
params.mzmls = "$resources/raw/CiCs*/CiCs*.mzML"
params.raws = "$resources/raw/CiCs/*"
params.mqpars = "$projectDir/config/default_maxquant.xml"
params.mgfs = "$resources/converted_raw/*"

params.database = "$resources/reference/protein_databases/combined/all.fasta"
params.stats = "$projectDir/reports/Proteomics/"
params.processed = "$resources/processed"
params.fragger_dir = "$params.processed/MsFragger"
params.maxquant_dir = "$params.processed/MaxQuant"
params.smsnet_dir = "$params.processed/SMSNET"
params.msgf_dir = "$params.processed/msgf"
params.smsnetmodel = "$resources/SMSNET/smsnet.model.m/smsnet"

// MSGF+
params.inst = "1" // Specifies orbitrap
params.msgf_tolerance = "20ppm"
