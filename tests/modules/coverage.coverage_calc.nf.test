                outdir = "$baseDir/tests/nf-test-out/coverage_merge"
                // outdir = "tests/results"
            }
            process {
                """
                // define inputs of the process here. Example:
                input[0] = Channel.fromPath(params.combined)
                input[1] = Channel.fromPath("$baseDir/results/C_indra/1-First_pass/seq-header_map_found.tsv")
                input[2] = Channel.fromPath("$baseDir/results/C_indra/1-First_pass/percolator_peptide_map.tsv")
                input[3] = params.outdir
                """
            }
        }

        then {
            assert process.success
        }

    }

